<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_degradado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ApuestaActivity">

    <TextView
        android:id="@+id/nombreAplicacion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/courgette_regular"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="ApuestaYa"
        android:textColor="#8E7755"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etiquetaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcespro_bold"
        android:text="PARTIDO"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreAplicacion"
        app:layout_constraintVertical_bias="0.026" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuPerfil"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordes_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaId">


        <ImageView
            android:id="@+id/equipo1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_perfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.605"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/nombreEquipoUno"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/itim"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Nombre1" />

            <TextView
                android:id="@+id/nombreEquipoDos"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/itim"
                android:gravity="center"

                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/nombreEquipoUno"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Nombre2" />

            <TextView
                android:id="@+id/probabilidadEquipoUno"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/itim"
                android:gravity="center"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombreEquipoUno"
                tools:text="Probabilidad1" />

            <TextView
                android:id="@+id/probabilidadEquipoDos"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/itim"
                android:gravity="center"

                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/probabilidadEquipoUno"
                app:layout_constraintTop_toBottomOf="@+id/nombreEquipoDos"
                tools:text="Probabilidad1" />

            <Button
                android:id="@+id/apostarEquipoUno"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:text="APOSTAR"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/probabilidadEquipoUno" />

            <Button
                android:id="@+id/apostarEquipoDos"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="12dp"

                android:text="APOSTAR"
                app:layout_constraintStart_toEndOf="@+id/apostarEquipoUno"
                app:layout_constraintTop_toBottomOf="@+id/probabilidadEquipoDos" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/equipo2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="120dp"

            android:layout_marginTop="16dp"
            android:src="@drawable/ic_perfil"
            app:layout_constraintStart_toEndOf="@+id/equipo1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/puntosUsuario"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/itim"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/equipo1"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hora" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/regresarPartido"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="32dp"
        android:text="REGRESAR"
        android:backgroundTint="@color/dorado1"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPerfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@color/menu"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/botonPartidos"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="PARTIDOS"
            app:icon="@drawable/ic_baseline_sports_24"
            app:iconPadding="4dp"
            app:strokeColor="#00F3EDED" />

        <Button
            android:id="@+id/botonPerfil"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="PERFIL"
            app:icon="@drawable/ic_baseline_person_24"
            app:iconPadding="4dp"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/botonSalir"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="SALIR"
            app:icon="@drawable/ic_baseline_exit_to_app_24"
            app:iconPadding="4dp"
            app:strokeColor="#00FFFFFF" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>