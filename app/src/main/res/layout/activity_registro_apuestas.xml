<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".ui.activities.RegistroApuestasActivity">

    <TextView
        android:id="@+id/nombreAplicacion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/courgette_regular"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="ApuestaYa"
        android:textColor="#8E7755"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etiquetaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcespro_bold"
        android:text="REGISTRO DE APUESTAS"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreAplicacion"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sourcespro_bold"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaId" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaApuestas"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="48dp"
        android:padding="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/bordes_constraint"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuario" />

    <Button
        android:id="@+id/regresarPerfil"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dorado1"
        android:text="REGRESAR"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaApuestas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@color/menu"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/botonPartidos"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="PARTIDOS"
            app:icon="@drawable/ic_baseline_sports_24"
            app:iconPadding="4dp"
            app:strokeColor="#00F3EDED" />

        <Button
            android:id="@+id/botonPerfil"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="PERFIL"
            app:icon="@drawable/ic_baseline_person_24"
            app:iconPadding="4dp"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/botonSalir"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="SALIR"
            app:icon="@drawable/ic_baseline_exit_to_app_24"
            app:iconPadding="4dp"
            app:strokeColor="#00FFFFFF" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>