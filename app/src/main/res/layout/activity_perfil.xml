<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".ui.activities.PerfilActivity">

    <TextView
        android:id="@+id/nombreAplicacion"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/courgette_regular"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="ApuestaYa"
        android:textColor="#8E7755"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etiquetaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcespro_bold"
        android:text="PERFIL DE USUARIO"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreAplicacion"
        app:layout_constraintVertical_bias="0.026" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuPerfil"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bordes_constraint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaId">


        <ImageView
            android:id="@+id/imageFutbol"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageFutbol" >

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="68dp"
                android:fontFamily="@font/itim"
                android:gravity="center_vertical"
                android:text="Email:"
                android:textColor="#8E7755"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nombreUsuario"
                android:layout_width="215dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/itim"
                android:gravity="center_vertical"

                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/itim"
                android:gravity="center_vertical"
                android:text="Nombre:"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textNombre"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/emailUsuario"
                android:layout_width="215dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/itim"
                android:gravity="center_vertical"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/textNombre"
                app:layout_constraintTop_toBottomOf="@+id/nombreUsuario" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/itim"
                android:gravity="center_vertical"
                android:text="Puntos:"
                android:textColor="#8E7755"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNombre" />

            <TextView
                android:id="@+id/puntosUsuario"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/itim"

                android:gravity="center_vertical"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/emailUsuario" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/irApuestas"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/dorado1"
        android:text="REGISTRO DE APUESTAS"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPerfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@color/menu"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/botonPartidos"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="DEPORTES"
            app:icon="@drawable/ic_baseline_sports_24"
            app:iconPadding="4dp"
            app:strokeColor="#00F3EDED" />

        <Button
            android:id="@+id/botonPerfil"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="PERFIL"
            app:icon="@drawable/ic_baseline_person_24"
            app:iconPadding="4dp"
            app:strokeColor="#00FFFFFF" />

        <Button
            android:id="@+id/botonSalir"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="SALIR"
            app:icon="@drawable/ic_baseline_exit_to_app_24"
            app:iconPadding="4dp"
            app:strokeColor="#00FFFFFF" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>